/*Projeto em Arduino: Controlador de Sem√°foro*/int vermelho = 10;int amarelo = 9;int verde = 8;int botao = 12;void setup() {  pinMode(vermelho, OUTPUT);  pinMode(amarelo, OUTPUT);  pinMode(verde,OUTPUT);  pinMode(botao, INPUT)  //Para que faca sentido ter um botao para mudar o sinal, o sinal vai, por padrao, estar sempre verde  digitalWrite(verde, HIGH)}void loop() {  if (digitalRead(botao) == HIGH){    delay(30)//detectar interferencias que nao seja o usuario apertando    if(digitalRead(botao) == HIGH){ //Se o pedestre apertar o botao, mude a cor.      MudarCor();      delay(15000) // o pedestre so podera apertar o botao apos 15 segundos    }  }}void MudarCor(){    //Amarelo fica aceso por 3 segundos    digitalWrite(verde, LOW);    digitalWrite(vermelho, LOW);    digitalWrite(amarelo, HIGH);    delay(3000);        //Desliga o amarelo, e acende o vermelho    digitalWrite(amarelo, LOW);    digitalWrite(vermelho, HIGH);    delay(6000);        //Desliga o Vermelho e acende o verde    digitalWrite(vermelho, LOW);    digitalWrite(verde, HIGH);}